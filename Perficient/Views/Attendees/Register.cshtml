@model Perficient.ViewModels.AttendeeViewModel

@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4 text-center">
        <h2>Register</h2>
        <br />
        <p>Please select a type of registration:</p>
        <p>@Html.ActionLink("Client", "Register", "Clients", null, new { @class = "btn btn-default" })@Html.ActionLink("Attendee", "Register", "Attendees", null, new { @class = "btn btn-primary" })</p>
        <br />
        @using (Html.BeginForm("Register", "Attendees"))
        {
            <div class="form-group col-md-offset-4">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.FirstName) })
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>
            <div class="form-group col-md-offset-4">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.LastName) })
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
            <div class="form-group col-md-offset-4">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Email) })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="form-group col-md-offset-4">
                @Html.DropDownListFor(m => m.Client, new SelectList(Model.Clients, "Id", "Name"), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Client)
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        }
    </div>
    <div class="col-md-4">
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}